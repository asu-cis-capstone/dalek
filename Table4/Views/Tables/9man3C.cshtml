@model IEnumerable<Table4.Models.Table>

@{
    ViewBag.Title = "Index";
}
@{
    Layout = null;
}
<head>
    <title>9 Serv 3 Ctail</title>
    <link href="@Url.Content("~/Content/9manFloorplan3C.css")"
          rel="stylesheet" type="text/css" />

</head>
<div id="logo">
    <p><img src="~/images/RRLogo.jpg" alt="Red Robin!" /></p>
</div>
<div id="Reserve">
    @using (Html.BeginForm("Reserve", "Tables", FormMethod.Post, new { id = "reserveForm" }))
    {
        <input type="hidden" name="press" value="15" />
        <input type="submit" value="Reserve" style="float:right" />
    }
    </div>

    @using (Html.BeginForm("ChangeStatus15", "Tables", FormMethod.Post, new { id = "submitForm" }))
    {
        @Html.AntiForgeryToken()

        <div class="buttonbody">

            @foreach (var item in Model)
            {
                if (item.status == 0)
                {
                    <input type="submit" name="pressed" value="@Html.DisplayFor(m => item.number)" class="open" id="@Html.ValueFor(m => item.tablename)" />
                }

                if (item.status == 1)
                {
                    <input type="submit" name="pressed" value="@Html.DisplayFor(m => item.number)" class="sat" id="@Html.ValueFor(m => item.tablename)" />
                }

                if (item.status == 2)
                {
                    <input type="submit" name="pressed" value="@Html.DisplayFor(m => item.number)" class="dirty" id="@Html.ValueFor(m => item.tablename)" />
                }

                if (item.status == 3)
                {
                    <input type="submit" name="pressed" value="@Html.DisplayFor(m => item.number)" class="reserved" id="@Html.ValueFor(m => item.tablename)" />
                }



            }

        </div>
    <div id="servers">
        <table>
            <tr>
                <td>1</td>
